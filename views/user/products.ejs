<%- include('../partials/top-document') %> 
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
  <%- include('../partials/header') %>
  <main>
    <% if (products.length) { %>
        <div class="grid">
            <% products.forEach(product => { %>
                <article class="card product-item">
                    <header class="card__header">
                        <h1 class="product__title"><%= product.title %></h1>
                    </header>
                    <div class="card__image">
                        <img src="<%= product.image_url %> " alt="<%= product.title %>__image">
                    </div>
                    <div class="card__content">
                        <h2 class="product__price"><%= product.price %> â‚¬</h2>
                        <p class="product__description"><%= product.description %></p>
                    </div>
                    <div class="card__actions">
                        <a href="/products/<%= product.id %>" class="btn">Detail</a>
                        <%- include('../partials/add-to-cart', { product }) %>
                    </div>
                </article>
            <% }) %>
        </div>
    <% } else { %>
        <h1>No Products Found!</h1>
    <% } %>
  </main>

<%- include('../partials/footer') %>